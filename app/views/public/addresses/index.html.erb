<%= form_for @address,url: addresses_path, html: {method: :post} do |f| %>
  <div class="field">
    <%= f.label :"宛名" %>
    <%= f.text_field :name %>
  </div>
  <%= f.label :"郵便番号" %> <%= f.text_field :post_code %>
<%= f.label :"住所" %><%= f.text_field :street_address %>
<%= f.submit "追加" ,class: 'btn btn-primary'%>
<% end %>
<% @addresses.each do |address| %>
				<tr>
					<td><%= address.name %></td>
					<td><%= address.post_code  %></td>
					<td><%= address.street_address%></td>
					
					<td><br></td>
				</tr>
<% end %>