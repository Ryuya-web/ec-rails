<h1>商品詳細</h1>
   <%= attachment_image_tag @item, :image, format: 'jpeg', size: "100x100", fallback: "no-image.jpg"%><td>
       <%= @item.name %>
       <%= @item.description %>
       <%= (@item.tax_excluded_price * 1.1).floor %>円
    <%= form_with model:@cart_item,local:true do |f| %>
      <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.label :"個数" %>
        <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
        <%= f.submit "カートに入れる" %>
    <% end %>