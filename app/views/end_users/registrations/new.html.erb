<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :"名前" %>
     <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  <div class="field">
    <%= f.label :"フリガナ" %>
     <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
  </div>
  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :street_address, autofocus: true, autocomplete: "street_address" %>
  </div>
  <div class="field">
    <%= f.label :"電話番号"%>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>
<div class="field">
    <%= f.label :"email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "end_users/shared/links" %>